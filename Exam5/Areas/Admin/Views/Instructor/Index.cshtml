@model IEnumerable<InstructorListItemVM>

<a asp-action="Create" type="button" class="btn btn-success">Create</a>
<p></p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Fullname</th>
            <th scope="col">Position</th>
            <th scope="col">ImageUrl</th>
            <th scope="col">Image</th>
            <th scope="col">CreatedTime</th>
            <th scope="col">IsDeleted</th>
            <th colspan="2" scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @if(Model == null)
        {
            <tr>
                <td colspan="9" class="text-center">No data</td>
            </tr>
        }
        else
        {
            foreach(var item in Model)
            {
                <tr class=@((item.IsDeleted) ? "table-danger" : "")>
                    <th>@item.Id</th>
                    <td>@item.Fullname</td>
                    <td>@item.Position</td>
                    <td>@item.ImageUrl</td>
                    <td>
                        <img height="60px" src="~/@item.ImageUrl">
                    </td>
                    <td>@item.CreatedTime</td>
                    <td>@item.IsDeleted</td>
                    <td>
                        <a asp-route-id="@item.Id" asp-action="Update" type="button" class="btn btn-primary">Update</a>
                    </td>
                    <form method="post">
                        <td>
                            <button asp-action="Delete" asp-route-id="@item.Id" type="submit" class="btn btn-danger">Delete</button>
                        </td>
                    </form>
                </tr>
            }
        }
    </tbody>
</table>